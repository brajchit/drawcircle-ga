<!DOCTYPE html>
<html>

<head>
  <title>Genetic Algorithms</title>

  <!-- load http://maurizzzio.github.io/function-plot/ -->
  <script src="http://cdnjs.cloudflare.com/ajax/libs/d3/3.5.5/d3.min.js"></script>
  <script src="https://wzrd.in/standalone/function-plot@1.14.0"></script>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <script src="https://unpkg.com/vue"></script>
  <script src="https://cdn.jsdelivr.net/npm/vue-resource@1.3.4"></script>
</head>

<body>
  <div id="app">

    <form id="form">
      <label for="radius">Enter Radius: </label>
      <input type="number" id="radius" value="10" />
      <input class="btn btn-success" type="submit" value="Set" />
    </form>

    <div class="row">
      <div id="plot" class="col-md-6"></div>
      <div class="col-md-6" id="pupulation">
        <!-- <ga-options></ga-options> -->
        <div id="chromosomes">
        </div>
      </div>
    </div>

    <form class="form-horizontal" >
      <div class="radio">
        <label>
        <input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked>
        Function Une
      </label>
      </div>
      <div class="radio">
        <label>
        <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
        Function Two
      </label>
      </div>
      <div class="row">
        <section class="col-sm-3">

          <label class="label-normal" for="psize">Population: </label>
          <input type="number" id="psize" value="10" />

          <label class="label-normal" for="psize">Generations: </label>
          <input type="number" id="generations" value="100" />

        </section>

        <section class="col-sm-3">
          <div class="row label-select">
            <div class="col-md-6 left">
              <label class="label-normal" for="crossover-rate">Crossover Rate: </label>
            </div>
            <div class="col-md-6">
              <select class="form-control" v-model="crossover.selected">
                <option v-for="option in crossover.opts" :value="option">
                  {{option}}
                </option>
              </select>
            </div>
          </div>

          <div class="row label-select">
            <div class="col-md-6 left">
              <label class="label-normal" for="mutation-rate">Mutation Rate: </label>
            </div>
            <div class="col-md-6">
              <select class="form-control" v-model="mutation.selected">
                <option v-for="option in mutation.opts" :value="option">
                  {{option}}
                </option>
              </select>
            </div>
          </div>
          <!-- <input type="number" id="mutation-rate" value="0.5" /> -->
        </section>
      </div>

      <div class="row">
        <div class="col-sm-4">
          <button type="button" class="btn btn-success" id="generate">Generate</button>
          <button type="button" class="btn btn-success" @click="runGA()">Compute</button>
          <button type="button" class="btn btn-danger">Stop</button>
        </div>
      </div>

    </form>

  </div>

  <script src="http://cdnjs.cloudflare.com/ajax/libs/mathjs/3.14.2/math.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  <script src="/javascripts/myGA.js" charset="utf-8"></script>
  <script src="/javascripts/app.js" charset="utf-8"></script>
</body>

</html>
